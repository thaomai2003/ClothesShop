@{
    Layout = "_HomeLayout";
}
@model IEnumerable<MyFinalExam.ViewModels.ProductVM>
<!-- Start Hero Section -->
<div class="hero">
    <div class="container ">
        <div class="row align-items-center justify-content-between">
            <div class="col-lg-5 d-flex align-items-center">
                <div class="intro-excerpt">
                    <h1>Shop</h1>
                </div>
            </div>
            <div class="col-lg-5 d-flex justify-content-end" style="margin-top: -20px;">
                <form class="d-flex" asp-action="Search" asp-controller="shop">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="query">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="container d-flex justify-content-end mt-3 me-3">
    <div class="d-flex bg-light ps-3 py-3 rounded align-items-center" style="margin-bottom: 30px !important;
    margin-right: 70px;">
        <label for="fruits" class="me-2">Default Sorting:</label>
        <select id="fruits" name="fruitlist" class="border-0 form-select-sm bg-light me-3" form="fruitform">
            <option value="volvo">Nothing</option>
            <option value="saab">Popularity</option>
            <option value="opel">Modern</option>
            <option value="audi">Fantastic</option>
        </select>
    </div>
</div>
<!-- End Hero Section -->
<!-- Flex Container for Products and Fruits Shop -->
<div class="container containerSize">
    <div class="row">
        <!-- Fruits Shop Start -->
        <div class="col-lg-3">
            <div class="container-fluid">
                <div class="row g-4">
                    <!-- Categories Section -->
                    @await Component.InvokeAsync("MenuCategory")
                    <!-- Categories Section End -->
                    <!-- Price Section -->
                    <div class="col-lg-12">
                        <h4 class="mb-2">Price</h4>
                        <input type="range" class="form-range w-100" id="rangeInput" name="rangeInput" min="0" max="500" value="0" oninput="amount.value=rangeInput.value">
                        <output id="amount" name="amount" min-value="0" max-value="500" for="rangeInput">0</output>
                    </div>
                    <!-- Price Section End -->
                    <!-- Additional Section -->
                    <div class="col-lg-12">
                        <h4>Additional</h4>
                        <div class="mb-2">
                            <input type="radio" class="me-2" id="Categories-1" name="Categories-1" value="Beverages">
                            <label for="Categories-1"> Hot</label>
                        </div>
                        <div class="mb-2">
                            <input type="radio" class="me-2" id="Categories-2" name="Categories-1" value="Beverages">
                            <label for="Categories-2"> Fresh</label>
                        </div>
                        <div class="mb-2">
                            <input type="radio" class="me-2" id="Categories-4" name="Categories-1" value="Beverages">
                            <label for="Categories-4"> Discount</label>
                        </div>
                        <div class="mb-2">
                            <input type="radio" class="me-2" id="Categories-5" name="Categories-1" value="Beverages">
                            <label for="Categories-5"> Expired</label>
                        </div>
                    </div>
                    <!-- Additional Section End -->
                    <!-- Featured Products Section -->
                    <div class="col-lg-12">
                        <h4 class="mb-3">Featured products</h4>
                        @foreach (var item in Model.Take(3))
                        {
                            <div class="d-flex align-items-center justify-content-start">
                                <div class="rounded me-4" style="width: 100px; height: 100px;">
                                    <a href="@Url.Action("Detail", "Shop", new { id = item.ID })" style="text-decoration: none;">
                                        <div class="product-thumbnail-wrapper">
                                            <img src="~/Hình/images/@item.ImageURL" class="img-fluid product-thumbnail product-image" alt="@item.Name">
                                        </div>
                                    </a>
                                </div>
                                <div>
                                    <a href="@Url.Action("Detail", "Shop", new { id = item.ID })" style="text-decoration: none;">
                                        <h6 class="product-title">@item.Name</h6>
                                    </a>
                                    <div class="d-flex mb-2">
                                        <i class="fa fa-star text-secondary"></i>
                                        <i class="fa fa-star text-secondary"></i>
                                        <i class="fa fa-star text-secondary"></i>
                                        <i class="fa fa-star text-secondary"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <div class="d-flex mb-2">
                                        <h5 class="fw-bold me-2">@item.DetailSale $</h5>
                                        <h5 class="text-danger text-decoration-line-through">@item.Price $</h5>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="col-lg-12">
                            <div class="d-flex justify-content-center my-4">
                                <a href="#" class="btn border border-secondary px-4 py-3 rounded-pill text-primary w-100">View More</a>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="position-relative">
                                <img src="~/Hình/images/Pate2.webp" class="img-fluid w-100 rounded" alt="">
                            </div>
                        </div>
                    </div>
                    <!-- Featured Products Section End -->
                </div>
            </div>
        </div>
        <!-- Fruits Shop End -->
        <!-- Flex Container for Products and Fruits Shop -->
        <div class="col-lg-9">
            <div class="container-fluid d-flex flex-wrap">
                @RenderBody()
                @* /Shop/Index
                *@
            </div>
        </div>

