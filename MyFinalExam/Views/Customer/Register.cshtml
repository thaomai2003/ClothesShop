@model MyFinalExam.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Register";
}
<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Register</h1>
                </div>
            </div>
            <div class="col-lg-7">
            </div>
        </div>
    </div>
</div>
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row mb-5">
            <div class="border p-4 rounded" role="alert">
                Already customer? <a asp-action="Login" asp-controller="Customer">Click here</a> to login
            </div>
        </div>
        <h2 class="h3 mb-4 text-black">Register</h2>
        <form asp-action="Register" enctype="multipart/form-data" >
            <div class="row">
                <div class="p-3 p-lg-5 border bg-white">
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label asp-for="@Model.Id" class="text-black my-3"></label><span class="text-danger">*</span>
                            <input asp-for="@Model.Id" type="text" class="form-control" id="c_fname">
                            <span asp-validation-for="@Model.Id" class="text-bg-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="@Model.Password" class="text-black my-3"></label><span class="text-danger">*</span>
                            <input asp-for="@Model.Password" class="form-control" id="c_lname">
                            <span asp-validation-for="@Model.Password" class="text-bg-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="@Model.Name" class="text-black my-3"></label><span class="text-danger">*</span>
                            <input asp-for="@Model.Name" class="form-control" id="c_companyname" />
                            <span asp-validation-for="@Model.Name" class="text-bg-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label asp-for="@Model.Age" class="text-black my-3"></label>
                            <input asp-for="@Model.Age" class="form-control" id="c_companyname" />
                            <span asp-validation-for="@Model.Age" class="text-bg-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="@Model.Email" class="text-black my-3"></label><span class="text-danger">*</span>
                            <input asp-for="@Model.Email" class="form-control" id="c_companyname" />
                            <span asp-validation-for="@Model.Email" class="text-bg-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="@Model.Phone" class="text-black my-3"></label><span class="text-danger">*</span>
                            <input asp-for="@Model.Phone" class="form-control" id="c_companyname" />
                            <span asp-validation-for="@Model.Phone" class="text-bg-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="@Model.City" class="text-black my-3"></label>
                            <input asp-for="@Model.City" class="form-control" id="c_companyname" />
                            <span asp-validation-for="@Model.City" class="text-bg-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="@Model.Address" class="text-black my-3"></label>
                            <input asp-for="@Model.Address" class="form-control" id="c_companyname" />
                            <span asp-validation-for="@Model.Address" class="text-bg-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label for="Sex" class="text-black my-3" data-bs-toggle="collapse" href="#create_an_account"
                                   aria-expanded="false" aria-controls="create_an_account">
                                <input asp-for="@Model.Sex" class="form-check-input"> Men?
                            </label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="Image" class="text-black my-3">Image</label>
                            <input type="file" name="Image" class="form-control" id="c_companyname" />
                        </div>
                    </div>
                    <div class="form-group my-5">
                        <button class="btn btn-black btn-lg py-3 btn-block" type="submit">Register</button>
                    </div>
                </div>
            </div>
        </form>


        </h2>
    </div>
</div>
            
<!-- End Hero Section -->
